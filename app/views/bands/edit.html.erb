<h1>Bands#edit</h1>
<p>Temporary edit page</p>
<% userband = UserBand.find_by(user_id: session[:user_id], band_id: @band.id) %>
<% if !userband.nil? %>
<% if userband.admin_priveleges == 1 %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
			<% session[:band_id] = @band.id %>

		<%= form_for(@band) do |f| %>
			
			<%= f.label :name, "Name" %>
			<%= f.text_field :name, class: "form-control" %>
			<br>
			<%= f.label :location, "Location" %>
			<%= f.text_field :location, class: "form-control" %>
			<br>
			<%= f.label :about_me, "About Me" %>
			<%= f.text_field :about_me, class: "form-control" %>
			<br>
			<%= f.submit "Create your Band!", class: "btn btn-primary"%>
		<%end%>
	</div>
</div>

<%= link_to "Add a member to this band" %>
<% end %>
<% else %>
	<h1> Error</h1>
	<p> You do not have access to this page.</p>
<% end %>