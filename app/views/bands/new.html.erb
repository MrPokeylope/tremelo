
<h1 class="page-heading">
	<% user = User.find(session[:user_id]) %>
	<%= user.display_name %>'s new BAND!
</h1>
<%= nested_form_for @band do |f|%>
      <%= render partial: 'shared/error_messages', locals: {obj: f.object} %>

    <div class="form-group">
      <div class="col-xs-6 col-md-8">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-6 col-md-6">
        <%= f.label :full_address, "Hometown" %>
        <%= f.text_field :full_address, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12">
        <%= f.label :about_me, "About Me" %>
        <%= f.text_area :about_me, :size => "10x5", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-8 col-md-6">
        <% if !@band.full_address.nil? %>
          <b> Latitude: </b> <%= @band.latitude %>
          <b> Longitude: </b> <%= @band.longitude %>
        <% end %>
      </div>
    </div>
<%= f.submit "Next" %>
<% end%>