<div class="container">

<% if !@userband.nil? %>
	<% user = User.find(@userband.user_id) %>
	<h1 class="page-heading">
		<%= user.display_name %>'s new BAND!
	</h1>

	<p class="subtitle">
		This page will be significantly different later...Or will it? j/k
	</p>

	<%= form_for(@band) do |f| %>
			
	<div class="form-group">
		<div class="row">
			<div class="col-xs-4 col-md-4">
				<%= f.label :name, "Name" %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-xs-8 col-md-8">
				<%= f.label :full_address, "Location" %>
				<%= f.text_field :full_address, class: "form-control" %>
			</div>
		</div>
	</div>

	<div class="form-group">
			<%= f.label :about_me, "About Me" %>
			<%= f.text_area :about_me, :size => "10x5", class: "form-control" %>
	</div>

		<%= f.submit "Create your Band!", class: "btn btn-block"%>
	<%end%>

	<% else %>
		<h2>ERROR</h2>
		<p>You do not have access to this page.</p>
	<%end%>

</div>