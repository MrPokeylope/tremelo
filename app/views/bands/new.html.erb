<% if !@userband.nil? %>
<% user = User.find(@userband.user_id) %>
<h1> <%= user.display_name %>'s new BAND! </h1>

<p>This page will be significantly different later</p>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@band) do |f| %>
			
			<%= f.label :name, "Name" %>
			<%= f.text_field :name, class: "form-control" %>
			<br>
			<%= f.label :location, "Location" %>
			<%= f.text_field :location, class: "form-control" %>
			<br>
			<%= f.label :about_me, "About Me" %>
			<%= f.text_field :about_me, class: "form-control" %>
			<br>
			<%= f.submit "Create your Band!", class: "btn btn-primary"%>
		<%end%>
	</div>
</div>
<% else %>
<h2> ERROR </h2>
<p> You do not have access to this page.</p>
<%end%>