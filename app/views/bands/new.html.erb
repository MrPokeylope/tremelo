<br><br><br><br>
<% if !@userband.nil? %>
<% user = User.find(@userband.user_id) %>
<% session[:user_id] = user.id %>
<h1> <%= user.display_name %>'s new BAND! </h1>
<p> <%= session[:user_id] %> </p>

<p>This page will be significantly different later</p>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@band) do |f| %>
			
			<%= f.label :name, "Name" %>
			<%= f.text_field :name, class: "form-control" %>
			<br>
			<%= f.label :location, "Location" %>
			<%= f.text_field :location, class: "form-control" %>
			<br>
			<%= f.label :about_me, "About Me" %>
			<%= f.text_field :about_me, class: "form-control" %>
			<br>
			<%= f.submit "Create your Band!", class: "btn btn-primary"%>
		<%end%>
	</div>
</div>

<%end%>