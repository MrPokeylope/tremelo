<div class="container">

  <h1 class="page-heading">
    Upload a Profile Picture for <%= @band.name %>
  </h1>
  <br>

  <% @band = Band.find(params[:id]) %>

  <%= form_for @band, :html => { :multipart => true},
      id: "js-upload-form" do |f| %>
  	
  	<%= render 'shared/error_messages' %>

    <h4>Select files from your computer</h4>
      <div class="form-inline">
        <div class="form-group">
          <%= f.file_field :profile_picture, accept: 'image/png, image/gif, image/jpeg, image/bmp', id: "js-upload-files" %>
        </div>
        <%= f.submit "Upload Files", class: "btn btn-sm btn-primary", 
            id: "js-upload-submit" %>
      </div>

    <h4>Or drag and drop files below</h4>
    <div class="upload-drop-zone" id="drop-zone">
      Just drag and drop files here
    </div>

    <!-- Progress Bar -->
    <div class="progress">
      <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
        <span class="sr-only">60% Complete</span>
      </div>
    </div>
    
  <% end %>

</div>