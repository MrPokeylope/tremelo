<div class="col-md-6 col-md-offset-3">
  <%= form_for @band, url: band_path(@band.name) do |f| %>
  <%= render partial: 'shared/error_messages', locals: {obj: f.object} %>

  <div class="form-horizontal">

    <div class="form-group">
      <div class="col-xs-6 col-md-6">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-6 col-md-6">
        <%= f.label :full_address, "Hometown" %>
        <%= f.text_field :full_address, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12">
        <%= f.label :about_me, "About Me" %>
        <%= f.text_area :about_me, :size => "10x5", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-8 col-md-6">
        <% if !@band.full_address.nil? %>
          <b> Latitude: </b> <%= @band.latitude %>
          <b> Longitude: </b> <%= @band.longitude %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-6 col-md-6">
        <%= f.label :genres, "Genres" %>
        <br>
        <% @genres.each do |genre| %>
          <%= check_box_tag "band[genre_ids][]", genre.id, @band.genres.include?(genre) %>
            <%= genre.content %><br />
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12">
        <% if @band.persisted? %>
          <%= f.submit "Save Changes", class: "btn btn-block"%>
        <% else %>
          <%= f.submit "Next", class: "btn btn-block"%>
        <% end %>
      </div>
    </div>

<% end %>

  </div>
</div>

