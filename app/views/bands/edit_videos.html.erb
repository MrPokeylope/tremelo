<% provide(:title, "Editing Videos") %>
<div class="container">
  <div class="col-md-8 col-md-offset-2">

  	<h1 class="page-heading">More Videos, More Problems</h1>
  	<p class="subtitle">
  		Link your band's music videos from Youtube
  	</p>

  	<div class="form-horizontal">
  		<%= form_for @band, url: { action: "update_videos" }, method: :put do |f| %>
        <%= render partial: 'shared/error_messages', locals: {obj: f.object} %>
        <%= f.fields_for :band_video do |v| %>

      		<h3>Add a New Video</h3>

      		<div class="form-group">
      			<div class="col-xs-8 col-md-8">
      				<%= v.label "Video Name", class: "control-label" %>
      				<%= v.text_field :video_name, class: "form-control",
      						required: "required" %>
      			</div>
      		</div>

      		<div class="form-group">
      			<div class="col-md-10">
      				<%= v.label "Enter the link to your video" %>
      				<%= v.text_field :video_link, class: "form-control", 
                  required: "required" %>
      			</div>
      		</div>
        <%end%>
      <div class="form-group">
        <div class="col-md-12">
      		<p>
            Don't like an old video? <%= link_to "Click here", delete_videos_band_path(@band) %> to delete the videos you don't want
          </p>

      		<ul>
      			<% for video in BandVideo.where(band_id: @band.id) %>
      			<li> <%= video.video_name %>
      				<%= check_box_tag "video_ids[]", video.id %>
      			</li>
      			<%end%> 
      		</ul>

        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <%= submit_tag "Submit Changes", class: "btn btn-block" %>
        </div>
      </div>

	<% end %>

	</div>
	</div>
</div>