<% provide(:title, "Editing Videos") %>

<div class="container">
  <div class="col-md-8 col-md-offset-2">

  	<h1 class="page-heading">More Videos, More Problems</h1>
  	<p class="subtitle">
  		Link your band's music videos from Youtube
  	</p>

  	<div class="form-horizontal">
  		<%= form_for update_videos_band_path, method: :put do |f| %>

  		<h3> Add a new video </h3>

  		<div class="form-group">
  			<div class="col-xs-4 col-md-4">
  				<%= f.label "Video Name:", class: "control-label" %>
  				<%= f.text_field "video_name", class: "form-control",
  						required: "required" %>
  			</div>
  		</div>

  		<div class="form-group">
  			<div class="col-xs-6 col-md-6">
  				<%= f.label "Enter the link to your video:", 
  				class: "control-label" %>
  				<%= f.text_field "video_link", class: "form-control",
  						required: "required" %>
  			</div>
  		</div>

  		<p> Don't like an old video? Check off the videos you would like to delete </p>
  		<ul>
  			<% for video in BandVideo.where(band_id: @band.id) %>
  			<li> <%= video.video_name %>
  				<%= check_box_tag "video_ids[]", video.id %>
  			</li>
  			<%end%> 
  		</ul>
  		<%= submit_tag "Submit Changes", class: "btn btn-block" %>

	<% end %>

	</div>
	</div>
</div>