<% provide(:title, "Editing Music") %>

<div class="container">
  <div class="col-md-8 col-md-offset-2">

  	<h1 class="page-heading">More Music, More Problems</h1>
  	<p class="subtitle">
  		Link your band's music from Soundcloud
  	</p>

  	<div class="form-horizontal">
  		<%= form_tag update_musics_band_path, method: :put do %>

  		<h3> Add a new song or playlist </h3>

  		<div class="form-group">
  			<div class="col-xs-4 col-md-4">
  				<%= label_tag "Song/Playlist Name:", nil, class: "control-label" %>
  				<%= text_field_tag "music_name", nil, class: "form-control",
  						required: "required" %>
  			</div>
  		</div>

  		<div class="form-group">
  			<div class="col-xs-6 col-md-6">
  				<%= label_tag "Enter the Soundcloud embed code:", nil, class: "control-label" %>
  				<%= text_field_tag "embed_html", nil, class: "form-control", 
              required: "required" %>
  			</div>
  		</div>

  		<p> Don't like an old song/playlist? <%= link_to "Click here", delete_musics_band_path(@band) %> to delete the songs or playlists you don't want </p>
  		<ul>
  			<% for music in BandMusic.where(band_id: @band.id) %>
  			<li> <%= music.name %>
  				<%= check_box_tag "music_ids[]", music.id %>
  			</li>
  			<%end%> 
  		</ul>
  		<%= submit_tag "Submit Changes", class: "btn btn-block" %>

	<% end %>

	</div>
	</div>
</div>