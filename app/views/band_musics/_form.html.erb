<%= render partial: 'shared/error_messages', locals: {obj: @band_music} %>

	<h3> Add a new song or playlist </h3>

	<div class="form-group">
		<div class="col-xs-4 col-md-4">
			<%= form.label "Song/Playlist Name:" %>
			<%= form.text_field :name, class: "form-control",
					required: "required" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-12">
			<%= form.label "Enter the SoundCloud embed code:" %>
			<%= form.text_field :embed_html, class: "form-control", 
          required: "required" %>
		</div>
	</div>

  <% if @band.band_musics.exists? %>
  	<p> 
      Don't like an old song/playlist? 
      <%= link_to "Click here", delete_musics_band_path(@band.name) %> 
      to delete the songs or playlists you don't want
    </p>
  <% end %>

  <% if @band_music.persisted? %>
    <%= form.submit "Save Changes", class: "btn btn-block"%>
  <% else %>
    <%= form.submit "Next", class: "btn btn-block"%>
  <% end %>