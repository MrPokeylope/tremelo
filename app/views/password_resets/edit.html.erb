<% provide(:title, "Change Your Password") %>
<h1 class="page-heading">Change Your Password</h1>

<div class="form-horizontal">
  	<div class="col-md-6 col-md-offset-3">
		<%= form_for @user, url: password_reset_path(@user.password_reset_token),
				html: { method: :patch } do |form| %>

			<div class="form-group">
				<div class="col-xs-6 col-md-6">
				  <%= form.label :password %>
				  <%= form.password_field :password, class: "form-control",
				  		required: "required" %>
			  </div>
		  </div>

			<div class="form-group">
				<div class="col-xs-6 col-md-6">
				  <%= form.label :password_confirmation, "Password (again)" %>
				  <%= form.password_field :password_confirmation, 
				  		class: "form-control", required: "required" %>
		  	</div>
		  </div>

		  <%= submit_tag "Change Password", class: "btn btn-block" %>
		<% end %>
	</div>
</div>
