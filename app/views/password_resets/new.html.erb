<% provide(:title, "Reset Your Password") %>
<h1>Reset Your Password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

			<%= form_tag password_resets_path do %>
			  <%= label_tag :email, "Email" %>
			  <%= text_field_tag :email %>

			  <br />
			  <%= submit_tag "Reset Password" %>
			<% end %>
  </div>
</div>