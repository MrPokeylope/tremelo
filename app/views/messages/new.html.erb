<% provide(:title, "Send Message") %>

<%= form_tag create_messages_path, method: :put do %>
	<div class="form-group">
  		<div class="col-xs-4 col-md-4">
			<%= label_tag "Send message to: ", nil, class: "control-label" %>
			<%= text_field_tag "user_to", nil, class: "form-control",
					required: "required" %>
		</div>
	</div>
	<br><br><br>
	<div class="form-group">
		<div class="col-xs-4 col-md-4">
			<%= label_tag "Your Message:", nil, class: "control-label" %>
			<%= text_area_tag "content", nil, class: "form-control",
					required: "required" %>
		</div>
	</div>
	<br><br><br>
	<%= submit_tag "Send", class: "btn btn-block" %>

<% end %>