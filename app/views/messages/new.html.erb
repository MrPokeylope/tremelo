<% provide(:title, "Send a Message") %>

<div class="container">

  <h1 class="page-heading">Send a Message</h1>

  <div class="form-horizontal">
    <div class="col-md-8 col-md-offset-2">
        
    	<%= form_tag create_messages_path, method: :put do %>

      	<div class="form-group">
      		<div class="col-xs-4 col-md-4">
      			<%= label_tag "Send message to: " %>
      			<%= text_field_tag "user_to", nil, class: "form-control",
      			required: "required" %>
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<div class="col-xs-12 col-md-12">
      			<%= text_area_tag "content", nil, class: "form-control",
      			required: "required", size: "10x5", 
      			placeholder: "Enter your message here" %>
      		</div>
      	</div>
      	
      	<%= submit_tag "Send", class: "btn btn-block" %>

    	<% end %>

    </div>
  </div>
</div>
