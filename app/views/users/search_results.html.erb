<% provide(:title, 'Search Results') %>

<!-- Scripts for gmaps4rails. Just accept it -->
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="container">

	<h1 class="page-heading">Search Results</h1>
	<%= link_to "Search again", search_users_path %>

	<!-- Search bar -->
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			

		</div>
	</div>

	<!-- <p>
		Searching by:<br>
		<% for it in @searching_by %>
			<ul>
				<%= it %>
			</ul>
		<% end %>
	</p> -->

	<% if @results.empty? %>

		<h2 class="text-center">
			No Results for "<%= params[:display_name] %>"
		</h2>

	<% else %>
		<!-- =========== Listing Found users ============== -->
		<ul>
		<% for result in @results %>
			<li>
				<%= render partial: 'user_result', locals: {user: result}%>
	        </li>
		<%end%>
		</ul>


	<% end %>

</div>