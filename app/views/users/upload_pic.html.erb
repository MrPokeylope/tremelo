<% provide(:title, "Upload a Profile Picture") %>

<div class="container">

  <h1 class="page-heading"> Upload a Profile Picture</h1>
  <%= form_for @user, :html => { :multipart => true}, id: "js-upload-form" do |f| %>

<%= render partial: 'shared/error_messages', locals: {obj: f.object} %>

    <h4>Select files from your computer</h4>
      <div class="form-inline">
        <div class="form-group">
          <%= f.file_field :profile_picture, accept: 'image/png, image/gif, image/jpeg, image/bmp', id: "js-upload-files" %>
        </div>
        <%= f.submit "Upload Files", class: "btn btn-sm btn-primary", 
            id: "js-upload-submit" %>
      </div>
