<% provide(:title, "Upload a Profile Picture") %>

<div class="container">

  <h1 class="page-heading"> Upload a Profile Picture</h1>

  <%= form_tag update_pic_user_path, :html => { :multipart => true},
     method: :put do%>

    <h4>Select files from your computer</h4>
      <div class="form-inline">
        <div class="form-group">
          <%= file_field_tag :profile_picture, accept: 'image/png, image/gif, image/jpeg, image/bmp'%>
        </div>
        <%= submit_tag "Upload Files", class: "btn btn-sm btn-primary"%>
      </div>

    <h4>Or drag and drop files below</h4>
    <div class="upload-drop-zone" id="drop-zone">
      Just drag and drop files here
    </div>

    <!-- Progress Bar -->
    <div class="progress">
      <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
        <span class="sr-only">60% Complete</span>
      </div>
    </div>

  <% end %>

</div>